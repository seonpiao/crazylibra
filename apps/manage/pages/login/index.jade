  body
    script.
      $('body').addClass('login-page')
    .login-box
      .login-logo
        a(href='/')
          b Admin
          | LTE
      // /.login-logo
      .login-box-body
        p.login-box-msg Sign in to start your session
        form(action='/login', method='post')
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Username', name="username")
            span.glyphicon.glyphicon-envelope.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='password', placeholder='Password', name="password")
            span.glyphicon.glyphicon-lock.form-control-feedback
          .row
            .col-xs-8
              .checkbox.icheck
                label
                  input(type='checkbox')
                  |  Remember Me
            // /.col
            .col-xs-4
              button.btn.btn-primary.btn-block.btn-flat(type='submit') Sign In
            // /.col
        a(href='#') I forgot my password
        br
        a.text-center(href='register.html') Register a new membership
      // /.login-box-body
